{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": {
				"useAltText": "error"
			},
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {}
				}
			},
			"correctness": {
				"noChildrenProp": "error",
				"noUnusedImports": "warn",
				"noUnusedVariables": "warn"
			},
			"style": {
				"useSelfClosingElements": "error"
			},
			"suspicious": {
				"noArrayIndexKey": "error",
				"noConsoleLog": "warn",
				"noDoubleEquals": "error",
				"noExplicitAny": "warn",
				"noExtraNonNullAssertion": "error"
			},
			"complexity": {
				"useArrowFunction": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"indentWidth": 2
		}
	}
}
